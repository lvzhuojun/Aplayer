<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="@dimen/d40_size"
  android:id="@+id/item_root"
  android:background="?attr/background_rect_ripple">
  <TextView
    android:id="@+id/playlist_addto_text"
    android:padding="@dimen/d10_size"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="@dimen/s16_size"
    android:textColor="?attr/text_color_primary"
    android:text="@string/song_sheet"
    android:gravity="center_vertical"/>
  <View
    android:layout_width="match_parent"
    android:layout_height="1px"
    android:layout_marginLeft="@dimen/d10_size"
    android:background="?attr/divider_color"
    android:layout_alignParentTop="true"/>
</RelativeLayout>